<Window x:Class="PDVnet.GestaoProdutos.UI.Views.ProdutoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PDVnet.GestaoProdutos.UI.Views"
        Title="Cadastro de Produto"
        Height="446.633" Width="450"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Formulário -->
        <StackPanel>
            <Label Content="Nome:"/>
            <TextBox Text="{Binding Produto.Nome, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="6"/>

            <Label Content="Descrição:"/>
            <TextBox Text="{Binding Produto.Descricao}" Margin="0,5,0,15" Padding="6" Height="50"/>

            <Label Content="Preço:"/>
            <TextBox x:Name="txtPreco"
                 PreviewTextInput="TxtPreco_PreviewTextInput"
                 TextChanged="TxtPreco_TextChanged"
                 PreviewKeyDown="TxtPreco_PreviewKeyDown"
                 Margin="0,5,0,15"
                 Padding="6"/>

            <Label Content="Quantidade:"/>
            <TextBox x:Name="txtQuantidade"
                Text="{Binding Produto.Quantidade, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,5,0,15"
                Padding="6"
                PreviewTextInput="TxtQuantidade_PreviewTextInput"
                PreviewKeyDown="TxtQuantidade_PreviewKeyDown"
                GotFocus="TxtQuantidade_GotFocus"
                LostFocus="TxtQuantidade_LostFocus"/>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salvar" Width="100" Margin="5" Padding="6" Command="{Binding SalvarCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Cancelar" Width="100" Margin="5" Padding="6" Command="{Binding CancelarCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
